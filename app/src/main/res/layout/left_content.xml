<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/leftmenu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1997ff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bitmap_book_read_chapterlist_repeat"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:drawableLeft="@mipmap/account"
            android:drawablePadding="30dp"
            android:paddingLeft="35dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="#ffffff" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50.0dip"
                android:background="@drawable/selector_category_item"
                android:clickable="true"
                android:drawableLeft="@mipmap/pin"
                android:drawableRight="@mipmap/more"
                android:drawablePadding="25.0dip"
                android:gravity="center_vertical"
                android:paddingLeft="25.0dip"
                android:paddingRight="40.0dip"
                android:text="查看当前主题"
                android:textColor="#ff959595"
                android:textSize="16.0sp"
                android:id="@+id/theme" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="#ffffff"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="40dp"/>

            <TextView
                android:id="@+id/task"
                android:layout_width="match_parent"
                android:layout_height="50.0dip"
                android:background="@drawable/selector_category_item"
                android:clickable="true"
                android:drawableLeft="@mipmap/survey"
                android:drawablePadding="25.0dip"
                android:gravity="center_vertical"
                android:drawableRight="@mipmap/more"
                android:paddingRight="40.0dip"
                android:paddingLeft="25.0dip"
                android:text="任务"
                android:textColor="#ff959595"
                android:textSize="16.0sp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="#ffffff"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="40dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50.0dip"
                android:background="@drawable/selector_category_item"
                android:clickable="true"
                android:drawableLeft="@mipmap/integral"
                android:drawableRight="@mipmap/more"
                android:paddingRight="40.0dip"
                android:drawablePadding="25.0dip"
                android:gravity="center_vertical"
                android:paddingLeft="25.0dp"
                android:text="钱包"
                android:textColor="#ff959595"
                android:textSize="16.0sp"
                android:id="@+id/wallet" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="#ffffff"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="40dp"/>

            <TextView
                android:id="@+id/Mall"
                android:layout_width="match_parent"
                android:layout_height="50.0dp"
                android:background="@drawable/selector_category_item"
                android:clickable="true"
                android:drawableLeft="@mipmap/cart"
                android:drawableRight="@mipmap/more"
                android:paddingRight="40.0dip"
                android:drawablePadding="25.0dip"
                android:gravity="center_vertical"
                android:paddingLeft="25.0dp"
                android:text="商城"
                android:textColor="#ff959595"
                android:textSize="16.0sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="#ffffff"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="40dp"/>
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>